@model SpiceApp.Models.ShoppingCart
@{
    ViewData["Title"] = "Item Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form method="post">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group">
                <label for="inputItem">Item Name</label>
                <input readonly asp-for="MenuItem.Name" type="text" class="form-control" id="inputItem">
            </div>

            <div class="form-group">
                <label for="inputDescription">Item Description</label>
                <input readonly asp-for="MenuItem.Description" type="text" class="form-control" id="inputDescription">
            </div>

            <div class="form-group">
                <label for="inputprice">Item Price</label>
                <input asp-for="MenuItem.price" type="text" class="form-control" readonly>
            </div>


            <div class="form-group">
                <label asp-for="MenuItem.Category"></label>
                <input asp-for="MenuItem.Category.Name" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.SubCategory"></label>
                <input asp-for="MenuItem.SubCategory.Name" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label asp-for="MenuItem.Category"></label>
                <input asp-for="MenuItem.Category.Name" type="text" class="form-control" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Count"></label>
                <input asp-for="Count" type="number" class="form-control">
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                </div>
                <div class="col-4">
                    <button type="submit" value="Add To Cart" class="btn btn-primary form-control">Add To Cart</button>
                </div>
            </div>

        </div>
        <div class="col-3 offset-1">
            <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9" />
        </div>
    </div>
        
    </div>

    <input hidden asp-for="MenuItemId"/>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

